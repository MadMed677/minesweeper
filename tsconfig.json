{
	"compilerOptions": {
		"sourceRoot": "./js",
		"outDir": "./dist/",
		"target": "ES6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"allowJs": false,
		"alwaysStrict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strict": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["pkg"],
	"exclude": [
		"js/bootstrap.js"
	]
}
